{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Gatsby develop",
      "type": "node",
      "request": "launch",
      "protocol": "inspector",
      "program": "${workspaceRoot}/gatsby/node_modules/gatsby/dist/bin/gatsby",
      "args": ["develop"],
      "cwd": "${workspaceFolder}/gatsby",
      "localRoot": "${workspaceFolder}/gatsby",
      "remoteRoot": "${workspaceFolder}/gatsby",
      "stopOnEntry": false,
      "runtimeExecutable": "node",
      "runtimeArgs": ["--nolazy"],
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "outputCapture": "std",
      "sourceMaps": false,
      "presentation": {
        "hidden": true,
        "group": "Static site",
        "order": 1
      }
    },
    {
      "name": "Chrome",
      "type": "chrome",
      "userDataDir": true,
      "request": "launch",
      "url": "http://localhost:8000",
      "webRoot": "${workspaceFolder}/gatsby",
      "preLaunchTask": "Wait for Gatsby local",
      "presentation": {
        "hidden": true,
        "group": "Static site",
        "order": 2
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Jest tests (all)",
      "program": "${workspaceFolder}/gatsby/node_modules/.bin/jest",
      "args": ["--runInBand"],
      "cwd": "${workspaceFolder}/gatsby",
      "localRoot": "${workspaceFolder}/gatsby",
      "remoteRoot": "${workspaceFolder}/gatsby",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "disableOptimisticBPs": true,
      "windows": {
        "program": "${workspaceFolder}/gatsby/node_modules/jest/bin/jest"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Jest tests (current file)",
      "program": "${workspaceFolder}/gatsby/node_modules/.bin/jest",
      "cwd": "${workspaceFolder}/gatsby",
      "localRoot": "${workspaceFolder}/gatsby",
      "remoteRoot": "${workspaceFolder}/gatsby",
      "args": ["${fileBasenameNoExtension}", "--config", "jest.config.js"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "disableOptimisticBPs": true,
      "windows": {
        "program": "${workspaceFolder}/gatsby/node_modules/jest/bin/jest"
      }
    }
  ],
  "compounds": [
    {
      "name": "Gatsby develop and launch Chrome",
      "configurations": ["Gatsby develop", "Chrome"],
      "presentation": {
        "hidden": false,
        "group": "_",
        "order": 0
      }
    }
  ]
}
