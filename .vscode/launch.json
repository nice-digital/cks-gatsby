{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Web app - launch",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "Web app - build",
      "program": "${workspaceFolder}/web-app/CKS.Web/bin/Debug/netcoreapp3.1/CKS.Web.dll",
      "args": [],
      "cwd": "${workspaceFolder}/web-app/CKS.Web",
      "stopAtEntry": false,
      "logging": {
        "moduleLoad": false
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      }
    },
    {
      "name": "Gatsby - develop",
      "type": "node",
      "request": "launch",
      "protocol": "inspector",
      "program": "${workspaceFolder}/gatsby/node_modules/gatsby/dist/bin/gatsby",
      "args": ["develop"],
      "cwd": "${workspaceFolder}/gatsby",
      "localRoot": "${workspaceFolder}/gatsby",
      "remoteRoot": "${workspaceFolder}/gatsby",
      "stopOnEntry": false,
      "runtimeExecutable": "node",
      "runtimeArgs": ["--nolazy"],
      // Use internalConsole as this is a lot faster than integrated terminal
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "outputCapture": "std",
      "sourceMaps": true,
      "presentation": {
        "hidden": false,
        "group": "Static site",
        "order": 1
      }
    },
    {
      "name": "Gatsby - Chrome",
      "type": "chrome",
      "userDataDir": true,
      "request": "launch",
      "url": "http://localhost:8000",
      "webRoot": "${workspaceFolder}/gatsby",
      "preLaunchTask": "Gatsby - wait",
      "presentation": {
        "hidden": false,
        "group": "Static site",
        "order": 2
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Jest tests - all",
      "program": "${workspaceFolder}/gatsby/node_modules/.bin/jest",
      "args": ["--runInBand"],
      "cwd": "${workspaceFolder}/gatsby",
      "localRoot": "${workspaceFolder}/gatsby",
      "remoteRoot": "${workspaceFolder}/gatsby",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "disableOptimisticBPs": true,
      "windows": {
        "program": "${workspaceFolder}/gatsby/node_modules/jest/bin/jest"
      },
      "presentation": {
        "hidden": false,
        "group": "Tests",
        "order": 1
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Jest tests - current file",
      "program": "${workspaceFolder}/gatsby/node_modules/.bin/jest",
      "cwd": "${workspaceFolder}/gatsby",
      "localRoot": "${workspaceFolder}/gatsby",
      "remoteRoot": "${workspaceFolder}/gatsby",
      "args": [
        "--runInBand",
        "--colors",
        "--runTestsByPath",
        "..\\${relativeFile}"
      ],
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "disableOptimisticBPs": true,
      "windows": {
        "program": "${workspaceFolder}/gatsby/node_modules/jest/bin/jest"
      },
      "presentation": {
        "hidden": false,
        "group": "Tests",
        "order": 2
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Jest tests - watch current file",
      "program": "${workspaceFolder}/gatsby/node_modules/.bin/jest",
      "cwd": "${workspaceFolder}/gatsby",
      "localRoot": "${workspaceFolder}/gatsby",
      "remoteRoot": "${workspaceFolder}/gatsby",
      "args": [
        "--runInBand",
        "--colors",
        "--watch",
        "--runTestsByPath",
        "..\\${relativeFile}"
      ],
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "disableOptimisticBPs": true,
      "windows": {
        "program": "${workspaceFolder}/gatsby/node_modules/jest/bin/jest"
      },
      "presentation": {
        "hidden": false,
        "group": "Tests",
        "order": 2
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Fake API",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "debug"],
      "port": 9230,
      "cwd": "${workspaceFolder}/fake-api",
      "localRoot": "${workspaceFolder}/fake-api",
      "remoteRoot": "${workspaceFolder}/fake-api",
      "console": "internalConsole",
      "internalConsoleOptions": "neverOpen",
      "presentation": {
        "hidden": false,
        "group": "Fake API",
        "order": 1
      }
    }
  ],
  "compounds": [
    {
      "name": "Launch CKS",
      "configurations": [
        "Web app - launch",
        "Fake API",
        "Gatsby - develop",
        "Gatsby - Chrome"
      ],
      "presentation": {
        "hidden": false,
        "group": "_",
        "order": 0
      }
    }
  ]
}
