{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.rulers": [80, 120],
  "files.eol": "\n",
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "gatsby/{.cache,public,coverage}": true,
    "gatsby/reduxcache*": true
  },
  "prettier.configPath": "./gatsby/.prettierrc",
  "eslint.workingDirectories": ["./gatsby"],
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },
  "workbench.colorCustomizations": {
    "activityBar.foreground": "#fff",
    "activityBar.background": "#3d4e57",
    "titleBar.activeBackground": "#3d4e57",
    "titleBar.activeForeground": "#fff"
  },
  "[feature]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.defaultFormatter": "alexkrechik.cucumberautocomplete"
  },
  "npm.enableScriptExplorer": true,
  "npm.useRootDirectory": false,
  "npm.enableRunFromFolder": true,
  "npm.includeDirectories": ["gatsby", "functional-tests", "fake-api"],
  "debug.showInStatusBar": "always",
  "window.title": "${dirty}${activeEditorShort}${separator}CKS${separator}NICE",
  "cucumberautocomplete.steps": [
    "functional-tests/node_modules/@nice-digital/wdio-cucumber-steps/src/given/definitions.js",
    "functional-tests/node_modules/@nice-digital/wdio-cucumber-steps/src/when/definitions.js",
    "functional-tests/node_modules/@nice-digital/wdio-cucumber-steps/src/then/definitions.js"
  ],
  "omnisharp.loggingLevel": "warning"
}
