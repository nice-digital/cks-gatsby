{
  "typescript.tsdk": "gatsby\\node_modules\\typescript\\lib",
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.rulers": [80, 120],
  "files.eol": "\n",
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "gatsby/{.cache,public,coverage}": true,
    "gatsby/reduxcache*": true,
    "functional-tests/allure-results": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/obj": true,
    "**/bin": true,
    "**/publish": true
  },
  "prettier.configPath": "./gatsby/.prettierrc",
  "eslint.workingDirectories": ["./gatsby"],
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },
  "workbench.colorCustomizations": {
    "activityBar.foreground": "#fff",
    "activityBar.background": "#3d4e57",
    "titleBar.activeBackground": "#3d4e57",
    "titleBar.activeForeground": "#fff"
  },
  "[feature]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.defaultFormatter": "alexkrechik.cucumberautocomplete"
  },
  "npm.enableScriptExplorer": true,
  "npm.useRootDirectory": false,
  "npm.enableRunFromFolder": true,
  "npm.includeDirectories": ["gatsby", "functional-tests", "fake-api"],
  "debug.showInStatusBar": "always",
  "window.title": "${dirty}${activeEditorShort}${separator}CKS${separator}NICE",
  "cucumberautocomplete.steps": [
    "functional-tests/node_modules/@nice-digital/wdio-cucumber-steps/lib/given/definitions.js",
    "functional-tests/node_modules/@nice-digital/wdio-cucumber-steps/lib/when/definitions.js",
    "functional-tests/node_modules/@nice-digital/wdio-cucumber-steps/lib/then/definitions.js",
    "functional-tests/steps/given.ts",
    "functional-tests/steps/when.ts",
    "functional-tests/steps/then.ts"
  ],
  "omnisharp.loggingLevel": "warning",
  "csharp.unitTestDebuggingOptions": {
    "logging": {
      "moduleLoad": false
    }
  },
  "[csharp]": {
    "editor.formatOnPaste": true,
    "editor.formatOnType": true,
    "editor.defaultFormatter": "ms-dotnettools.csharp",
    "editor.detectIndentation": false,
    "editor.insertSpaces": false,
    "editor.tabSize": 4,
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 120,
    "editor.rulers": [120]
  },
  "[xml]": {
    "editor.defaultFormatter": "DotJoshJohnson.xml"
  }
}
