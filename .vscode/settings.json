{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.rulers": [80, 120],
  "files.eol": "\n",
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "gatsby/{.cache,public,coverage}": true,
    "gatsby/reduxcache*": true
  },
  "prettier.configPath": "./gatsby/.prettierrc",
  "eslint.workingDirectories": ["./gatsby"],
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  }
}
